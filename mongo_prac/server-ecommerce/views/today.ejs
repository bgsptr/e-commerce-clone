<%- include('sidebar/index.ejs'); -%>

        <!-- content -->
        <div class="right content">
            <h1>Today</h1>
            <div>
                <form action="/tasks/today" class="form-today-tasks" method="post">
                    <div class="new-task">
                        <input type="text" placeholder="Add New Task" name="task">
                        <button type="submit" name="submit"><i class='bx bx-plus'></i></button>
                    </div>
                </form>
                <% /* %>
                <% for(let tasks in thisTasks) { %>
                <li class="today-tasks">
                    <input type="checkbox"> <%= thisTasks[tasks] %>
                </li>
                <% } %>
                <% */ %>
            </div>
            <div>
                <h3>Task: </h3>
                <form action="/tasks/today" method="post">
                    <input type="text" placeholder="Task" name="activity">
                    <br>
                    <input type="text" placeholder="Description" name="desc"><br>
                    <label for="">List
                        <select name="list">
                            <option>List</option>
                            <% lists.forEach((list) => { %>
                                <option value="<%= list.name %>"><%= list.name %></option>
                            <% }); %>
                        </select>
                    </label><br>
                    <label for="">Priority
                        <select name="priority">Due Date
                            <option>Priority</option>
                            <option value="1">P1</option>
                            <option value="2">P2</option>
                            <option value="3">P3</option>
                            <option value="4">P4</option>
                        </select>
                    </label><br>
                    <label for="">Due Date
                        <select name="due_date" id="">
                            <option>Due Date</option>
                            <option value="today">Today</option>
                            <option value="tomorrow">Tomorrow</option>
                            <option value="next_week">Next Week</option>
                        </select>
                    </label>
                    <button type="submit" name="submit"><i class='bx bx-plus'></i></button>
                </form>
            </div>
            <div class="show">
                
            </div>
        </div>
    </div>