<%- include('../partials/header.ejs'); -%>

    <div class="container">
        <!-- sidebar -->
        <div class="left sidebar toogle">
            <div class="container-sidebar">
                <div class="search-bar">
                    <div class="inline-menu">
                        <h3>Menu</h3>
                        <i class='bx bx-menu'></i>
                    </div>
                    <div class="search-box">
                        <span><i class='bx bx-search'></i></span>
                        <input type="text" placeholder="Search" class="search-input">
                    </div>
                </div>
                <div class="tasks">
                    <h5 class="sub-content">TASKS</h5>
                    <ul>
                        <li><i class='bx bx-chevrons-right'><a href="../tasks/upcoming">Upcoming</a></i></li>
                        <li><i class='bx bx-list-ul'><a href="../tasks/today">Today</a></i></li>
                        <li><i class='bx bxs-calendar'><a href="../tasks/calendar">Calendar</a></i></li>
                        <li><i class='bx bxs-note'><a href="../tasks/note">Sticky Wall</a></i></li>
                    </ul>
                </div>
                <div class="lists">
                    <form action="/lists" method="post">
                        <h5 class="sub-content">LISTS</h5>
                        <i class='bx bx-plus add-list'><a href="#">Add New List</a></i>
                        <input type="text" placeholder="List Name" class="list-input" name="list">
                        <input type="submit" hidden />
                    </form>
                    <div class="lists-info">
                        <% for(let list in lists) { %>
                            <ul>
                                <li><a href="/lists/<%= lists[list].id %>"><%= lists[list].name %></a>
                                    <div class="counted-task">
                                        10
                                    </div>
                                </li>
                            </ul>
                        <% } %>
                    </div>
                </div>
                <div class="tags">
                    <h5 class="sub-content">TAGS</h5>
                    <div class="tag-box">+ Add Tag</div>
                </div>
                <div class="footer-sidebar">
                    <ul>
                        <li><i class='bx bxs-cog' > Setting</i></li>
                        <li><i class='bx bx-log-out'> Sign Out</i></li>
                    </ul>
                </div>
            </div>
        </div>

<%- include('../partials/footer.ejs'); -%>